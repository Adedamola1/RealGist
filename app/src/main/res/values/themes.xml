<resources>
    <!-- Base application theme. -->
    <style name="Theme.RealGist" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryVariant">@color/app_color</item>
        <item name="colorOnPrimary">@color/search_bar</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:windowContentTransitions">true</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="expandedBarTextStyle" parent="Theme.RealGist">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@color/teal_200</item>


    </style>
</resources>

